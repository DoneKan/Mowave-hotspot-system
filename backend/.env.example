# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mowave_db
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Secret
JWT_SECRET=

# Payment API Configuration
# MTN MoMo API
MTN_MOMO_API_KEY=
MTN_MOMO_API_SECRET=
MTN_MOMO_SANDBOX=true

# Airtel Money API
AIRTEL_API_KEY= ""
AIRTEL_API_SECRET=""
AIRTEL_SANDBOX=true

# SMS Configuration
SMS_MOCK_MODE=true              # Set to false for live mode
ENABLE_TWILIO=true              # Enable Twilio integration
TWILIO_ACCOUNT_SID=your_sid     # Twilio account SID
TWILIO_AUTH_TOKEN=your_token    # Twilio auth token
TWILIO_PHONE_NUMBER=+1234567890 # Your Twilio phone number

# System Configuration
VOUCHER_EXPIRY_HOURS=24
MIN_VOUCHER_AMOUNT=1000
MAX_VOUCHER_AMOUNT=50000